<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    tools:cardElevation="5dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_item_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitStart"
            tools:src="@drawable/ic_female_magnetta" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_item_photo"
            android:layout_marginLeft="@dimen/list_item_padding"
            android:layout_marginTop="@dimen/list_item_header_vertical_margin"
            android:layout_marginRight="@dimen/list_item_padding"
            android:layout_marginBottom="@dimen/list_item_header_vertical_margin"
            android:layout_toEndOf="@+id/iv_item_photo"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Worker1" />

        <TextView
            android:id="@+id/tv_item_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_name"
            android:layout_alignStart="@+id/tv_item_name"
            android:layout_marginEnd="16dp"
            tools:text="Developer" />

        <TextView
            android:id="@+id/tv_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_item_position"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/tv_item_position"
            tools:text="12455123" />

        <TextView
            android:id="@+id/tv_item_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_item_id"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_toEndOf="@+id/tv_item_id"
            tools:text="20" />
    </RelativeLayout>

</android.support.v7.widget.CardView>